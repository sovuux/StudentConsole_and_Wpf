<Window x:Class="StudentInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="950">
    <Grid>
        <DataGrid x:Name="DataGrid" IsReadOnly="True" FontSize="15px" Margin="5" AutoGenerateColumns="False" ItemsSource="{Binding PersonLibrary}">
            <DataGrid.Columns >
                <DataGridTextColumn x:Name="NumID" Header="ID"  Binding="{Binding  Id}" />
                <DataGridTextColumn Header="Фамилия" Binding="{Binding StudentFio.Surname}" />
                <DataGridTextColumn Header="Имя" Binding="{Binding  StudentFio.Name}" />
                <DataGridTextColumn Header="Отчество" Binding="{Binding StudentFio.Patron}" />
                <DataGridTextColumn Header="Город" Binding="{Binding StudentAdress.City}"/>
                <DataGridTextColumn Header="Почтовый индекс" Binding="{Binding StudentAdress.PstIndex}"/>
                <DataGridTextColumn Header="Улица" Binding="{Binding StudentAdress.Street}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding StudentContacts.Mail}"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding StudentContacts.Phone}"/>
                <DataGridTextColumn Header="Факультет" Binding="{Binding StudentUniInfo.Faculty}"/>
                <DataGridTextColumn Header="Специальность" Binding="{Binding StudentUniInfo.Specialty}"/>
                <DataGridTextColumn Header="Курс" Binding="{Binding StudentUniInfo.Course}"/>
                <DataGridTextColumn Header="Группа" Binding="{Binding StudentUniInfo.Group}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="0,517,0,0" VerticalAlignment="Top" Height="44" Width="313" FontSize="18" Click="Delete_Click"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="637,516,0,0" VerticalAlignment="Top" Height="46" Width="313" FontSize="18" Click="Add_Click"/>
        <Label Content="Введите ID записи:" HorizontalAlignment="Left" Margin="0,486,0,0" VerticalAlignment="Top" Width="131" FontSize="14"/>
        <TextBox x:Name="LineId" HorizontalAlignment="Left" Margin="136,486,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="177" Height="26"/>
    </Grid>
</Window>
